Page {
  --topImgH: 525rpx; /* 头图高度 */
  --topImgP: 500rpx; /* 页面开头高度 */

  --bgcolorB: rgb(240, 240, 240); /* 底色 */
  --bgcolorO: rgb(255, 255, 255); /* 操作选项卡片背景色 */
  --bgcolorF: rgb(250, 250, 250); /* 一般卡片背景色 */
  --bgcolorD: rgb(250, 250, 250); /* 动态卡片背景色 */
  /* rgba(255, 255, 255, 0.3); */
  --navfontSize: 15px; /* 导航栏字号 px */
  --titlefontSize: 48rpx; /* 标题字号 */
  --ltitlefontSize: 28rpx; /* 小标题字号 */
  --ltitlefontLH: 42rpx; /* 小标题行高 1.5 倍字号 */
  --ctitlefontSize: 30rpx; /* 卡片标题字号 */
  --cinfofontSize: 28rpx; /* 卡片信息字号 */
  --cnobodyfontSize: 26rpx; /* 卡片辅助信息字号 */
  --smallfontSize: 24rpx; /* 特定小字字号 */
  --softColor: rgba(0, 0, 0, 0.52); /* 舒适阅读字体颜色 */
  --normalColor: rgba(0, 0, 0, 0.6); /* 普通信息字体颜色 */
  --titleColor: rgba(0, 0, 0, 0.75); /* 标题字体颜色 */
  --nobodyColor: rgba(0, 0, 0, 0.4); /* 辅助信息字体颜色 */
  --borderColor: rgba(0, 0, 0, 0.1); /* 一般线体颜色 */
  --acceptColor: rgba(45, 230, 39, 0.6) /* 接受指示颜色 */
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.navi {
  position: fixed;
  z-index: 2;
  top: 0;
  height: 0;
  background: var(--bgcolorB);
  width: 750rpx;
  border-bottom: solid 1rpx var(--borderColor);
  transition: all 0.3s ease;
}

.navi-content {
  position: relative;
  left: 0;
  margin: auto 22px;
  display: flex;
}

.navi-left {
  width: 70%;
  display: flex;
}

.navi-left-avatar {
  width: 60px;
  height: 60px;
  border-radius: 30px;
}

.navi-left-t {
  padding: 6px 6px 6px 16px;
}

.navi-left-title {
  font-size: var(--ctitlefontSize);
  font-weight: 700;
  color: var(--titleColor);
}

.navi-left-info {
  font-size: var(--cinfofontSize);
  color: var(--softColor);
}

.naviback {
  position: fixed;
  z-index: 3;
  background: var(--bgcolor);
  width: 30px;
  height: 30px;
  line-height: 26px;
  text-align: center;
  border-radius: 15px;
  left: 16px;
}

.backContainer {
  z-index: -3;
  min-height: 100vh;
  width: 750rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: var(--bgcolorB);
}

.container {
  background: var(--bgcolorB);
}

.page-container {
  background: var(--bgcolorO);
  height: 250rpx;
  width: 750rpx;
  display: flex;
  flex-wrap: wrap;
  border-bottom: solid 1rpx var(--borderColor);
}

.page-box {
  height: 250rpx;
  width: 250rpx;
  text-align: center;
}

.page-img {
  height: 110rpx;
  width: 110rpx;
  margin: 45rpx auto 6rpx auto;
}

.page-info {
  font-size: var(--smallfontSize);
  color: var(--nobodyColor);
}

.navi-tip {
  font-weight: 700;
  font-size: var(--ctitlefontSize);
  color: var(--titleColor);
}

.navi-button {
  background: transparent;
  height: 60px;
  line-height: 60px;
  padding: 0;
  margin: 0;
  text-align: left;
  display: flex;
}
