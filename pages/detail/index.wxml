        </view>
        <view class="state" style="color: rgba(230, 77, 39, 0.6)" wx:elif="{{subscribed}}">
          <text>已预约</text>
        </view>
        <view class="state" style="color: rgba(230, 77, 39, 0.6)" wx:elif="{{!canBorrow}}">
          <text>不可借用</text>
        </view>
        <view class="state" style="color: rgba(45, 230, 39, 0.6)" wx:else>
          <text>可预约</text>
        </view>
      </view>
      
